<h1>Listing surveys</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @surveys.each do |survey| %>
  <tr>
    <td><h2><%=survey.name%></h2></td>
    <td><%= link_to 'View', survey, :class => "btn btn-mini"%></td>
    <td><%= link_to 'Edit', edit_survey_path(survey), :class => "btn btn-mini btn-warning" %></td>
    <td><%= link_to 'Analyze Results', analyze_survey_path(survey), :class => "btn btn-mini btn-info" %> </td>
    <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-mini btn-danger" %></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to '+ New Survey', new_survey_path, :class => "btn btn-primary"%>
